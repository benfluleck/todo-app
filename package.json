{
  "name": "todo-sample",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.14.6",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.0.11",
    "nanoid": "^4.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^5.0.0",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.5",
    "tailwindcss": "^4.0.6",
    "typescript": "^5.7.3",
    "web-vitals": "^2.1.0",
    "zod": "^3.24.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "start:server": "npx json-server --watch db.json --port 3001",
    "build:css": "npx @tailwindcss/cli -i ./src/global.css -o ./src/assets/output.css",
    "watch:css": "npx @tailwindcss/cli -i ./src/global.css -o ./src/assets/output.css --watch",
    "prepare": "cp db.json.sample db.json",
    "e2e": "npx playwright test",
    "e2e:ui": "npx playwright test -ui"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@types/styled-components": "^5.1.25",
    "json-server": "^0.17.0",
    "sass": "^1.54.0",
    "ts-jest": "^29.2.5"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "testMatch": [
      "/**/?(*.)(spec|test).(ts|js)?(x)"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(nanoid)/)"
    ]
  }
}
